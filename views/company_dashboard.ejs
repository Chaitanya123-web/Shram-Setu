<h1>Company Dashboard</h1>

<% posts.forEach(post => { %>
  <div class="post-box" style="border:1px solid #ccc; margin-bottom:20px; padding:15px;">
    <h2>Post: <%= post.content || 'No Description' %></h2>
    <p><strong>Category:</strong> <%= post.worker || 'No Category' %></p>
    <p><strong>Location:</strong> <%= post.formattedAddress %></p>

    <h3>Matching Workers:</h3>
    <ul>
      <% post.workers.forEach(worker => { %>
        <li><%= worker.name %> — <%= worker.job %> — Location: <%= worker.formattedAddress %></li>
      <% }) %>
      <% if(post.workers.length === 0) { %>
        <li>No workers found.</li>
      <% } %>
    </ul>
  </div>
<% }) %>
